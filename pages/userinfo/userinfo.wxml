<!--pages/userinfo/userinfo.wxml-->
<view class='page'>
  <view class='page_hd'>
    <form bindsubmit='formSubmit'>
      <view class='page__title info'>个人信息</view>
      <view class="weui-cells__title">昵称</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder="请输入昵称" />
          </view>
        </view>
      </view>
      <view class="weui-cells__title">手机号</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder="请输入手机号" />
          </view>
        </view>
      </view>
      <button type='primary' form-type='submit'>提交</button>
      <button form-type='reset'>重置</button>
    </form>
  </view>
  <view class='page_hd'>
    <view class='page__title info'>会员充值</view>
    <view class='test'>
      <button type='primary'>包月会员（19/月）</button>
    </view>
    <view class='test'>
      <button type='primary'>永久会员（49/月）</button>
    </view>
  </view>
</view>